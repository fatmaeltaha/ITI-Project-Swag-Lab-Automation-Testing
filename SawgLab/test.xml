<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Swag lab">

    <!-- Run VALID scenarios -->
    <test name="Valid Scenarios">
        <groups>
            <run>
                <include name="valid"/>
            </run>
        </groups>
        <classes>
            <class name="com.swagLabs.tests.LoginTests"/>
            <class name="com.swagLabs.tests.ProductsTests"/>
            <class name="com.swagLabs.tests.CartTests"/>
            <class name="com.swagLabs.tests.FirstCheckoutTests"/>
            <class name="com.swagLabs.tests.SecondCheckoutTests"/>
            <class name="com.swagLabs.tests.ConfirmationOrderTest"/>
            <class name="com.swagLabs.tests.BottomBarTests"/>
            <class name="com.swagLabs.tests.SideMenuTests"/>


        </classes>
    </test>

    <!-- Run InVALID scenarios -->
    <test name="Invalid Scenarios">
        <groups>
            <run>
                <include name="invalid"/>
            </run>
        </groups>
        <classes>
            <class name="com.swagLabs.tests.LoginTests"/>
            <class name="com.swagLabs.tests.ProductsTests"/>
            <class name="com.swagLabs.tests.CartTests"/>
            <class name="com.swagLabs.tests.FirstCheckoutTests"/>
            <class name="com.swagLabs.tests.SecondCheckoutTests"/>
            <class name="com.swagLabs.tests.ConfirmationOrderTest"/>
            <class name="com.swagLabs.tests.BottomBarTests"/>
            <class name="com.swagLabs.tests.SideMenuTests"/>
        </classes>
    </test>

    <test name="End to End Scenario">

        <classes>
            <class name="com.swagLabs.tests.End2End"/>
        </classes>
    </test>



</suite>